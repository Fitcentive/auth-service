
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET      /health                                            controllers.HealthController.healthCheck
POST     /auth/login                                        controllers.AuthController.login
GET      /auth/login/:provider                              controllers.AuthController.ssoLogin(provider: String)
GET      /auth/:provider/callback/:clientId                 controllers.AuthController.oidcCallback(provider: String, clientId: String, code: String)
POST     /auth/refresh                                      controllers.AuthController.refreshAccessToken
POST     /auth/logout                                       controllers.AuthController.logout
POST     /auth/reset-password                               controllers.AuthController.resetPassword
POST     /auth/create-user                                  controllers.AuthController.createNewUser

GET      /auth/check-token                                  controllers.AuthController.validateToken

