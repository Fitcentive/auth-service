
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET      /health                                            io.fitcentive.auth.controllers.HealthController.healthCheck
POST     /auth/login                                        io.fitcentive.auth.controllers.AuthController.login
GET      /auth/login/:provider                              io.fitcentive.auth.controllers.AuthController.ssoLogin(provider: String)
GET      /auth/:provider/callback/:clientId                 io.fitcentive.auth.controllers.AuthController.oidcCallback(provider: String, clientId: String, code: String)
POST     /auth/refresh                                      io.fitcentive.auth.controllers.AuthController.refreshAccessToken
POST     /auth/logout                                       io.fitcentive.auth.controllers.AuthController.logout
POST     /auth/reset-password                               io.fitcentive.auth.controllers.AuthController.resetPassword
POST     /auth/create-user                                  io.fitcentive.auth.controllers.AuthController.createNewUser

GET      /auth/check-token                                  io.fitcentive.auth.controllers.AuthController.validateToken

